<h3>Edit Item</h3><br/>
<%= form_with url:"/merchants/#{@merchant.id}/items", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: @item.name  %><br/><br/>

  <%= f.label 'Description' %>
  <%= f.text_area :description, placeholder: @item.description %><br/><br/>

  <%= f.label 'Unit Price $' %>
  <%= f.number_field :unit_price, placeholder: "#{@item.unit_price}" %><br/><br/>

  <%= f.label :able %>
  <%= f.select :able, ["Disable", "Enable"], placeholder: @item.able %><br/><br/>

  <%= f.submit 'Submit Edit' %>
<% end %>

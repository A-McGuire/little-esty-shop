<style>
.column {
  float: left;
  width: 50%;
}
</style>


<h3 id="links"; style="text-align:left;">
    Merchant:  &nbsp; <%=  @merchant.name %><span style="float:right;"><%= render partial: 'partials/merch_header' %>&emsp;</span>
</h3>

<% @merchant.name %><br/>

<div class="row">
  <div class="column">
    <section id="top_customers">
    <h4><%= "Top Five Customers" %></h4>
    <% @top_five.each do |key, value| %>
      <p><%= key[1] %><%= " " %><%= key[2] %>
      <%= "'s sucessful transations:  " %>
      <%= value %> </p>
    <% end %>
    </section>

    <section id="bulk_discounts">
    <h4>&emsp;*<%= link_to "Click to view bulk discounts", "/merchants/#{@merchant.id}/discounts" %></h4>
    </section>
  </div>

  <div class="column">
    <h4><%= "Items Ready to Ship" %> </h4>
    <% @ship_ready.each do |item| %>
      <p id= <%="item-#{item[1]}-#{item[0]}"%> >
      <%= item[0] %>
      <%= link_to "#{item[1]}", "/merchants/#{@merchant.id}/invoices/#{item[1]}", method: :get %>
      <%= item[2].strftime("%A, %B %d, %Y") %>
      </p>
    <% end %>
  </div>
</div>

<h2>Edit Bulk Discount</h2>

<section>
  <%= form_with url: "/merchants/#{@bulk_discount.merchant_id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
    <%= f.label "Threshold" %>
    <%= f.number_field :threshold, value: "#{@bulk_discount.threshold}" %>
    <%= f.label "Discount" %>
    <%= f.text_field :discount, value: "#{@bulk_discount.discount}" %>
    <%= f.submit "Update Bulk discount" %>
  <% end %>
</section>
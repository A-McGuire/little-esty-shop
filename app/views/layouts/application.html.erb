<!DOCTYPE html>
<html>
  <head>
    <title>LittleEtsyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% require './app/services/git_hub_service' %>
    <h1 align="center">Little Esty Shop</h1><br/>

    
    
    
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    
    <%= yield %>

    <h4>Git Hub Repository: 
      <%= GitHubService.new.repo_name %>
    </h4>
    
    <h4>Contributors: 
      <%= GitHubService.new.repo_contributors.join(", ") %>
    </h4>
  </body>
</html>
